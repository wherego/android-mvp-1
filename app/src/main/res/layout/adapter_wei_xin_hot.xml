<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/padding16"
              android:paddingRight="@dimen/padding16"
              android:paddingBottom="@dimen/padding14"
              android:background="@drawable/click_white_dark_selector">
   <!-- <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">-->
        <TextView
            android:id="@+id/title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_normal"
            android:textColor="@color/colorMainDark"
            android:text="adfadfadfsafjkalsjfalsjfkaadfafafadfaf"/>
        <TextView
            android:id="@+id/src"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_below="@id/title"
            android:layout_marginTop="@dimen/margin30"
            android:textColor="@color/colorMainGray"
            android:text="公众号：国内旅游攻略"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/colorMainGray"
            android:layout_toRightOf="@id/src"
            android:layout_below="@id/title"
            android:layout_marginTop="@dimen/margin30"
            android:layout_marginLeft="@dimen/padding16"
            android:text="2016.11.11"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/simple_drawee_view"
            android:layout_width="@dimen/margin80"
            android:layout_height="@dimen/margin80"
            android:layout_alignParentRight="true"
            app:actualImageScaleType="focusCrop"
            android:layout_marginBottom="@dimen/padding16"
            app:placeholderImage="@mipmap/wei_xin_hot_default"/>
    <View
        style="@style/Line"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>